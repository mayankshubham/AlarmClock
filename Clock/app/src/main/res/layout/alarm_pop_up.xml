<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:id="@+id/timePicker"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
            android:text="@string/cancel_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
            android:id="@+id/cancel_alarm"
            app:layout_anchor="@+id/timePicker"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="98dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
            android:text="@string/confirm_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginRight="23dp"
        android:id="@+id/confirm_alarm"
            app:layout_anchor="@+id/timePicker"
        android:layout_marginEnd="23dp"
        android:layout_alignBaseline="@+id/cancel_alarm"
        android:layout_alignBottom="@+id/cancel_alarm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>